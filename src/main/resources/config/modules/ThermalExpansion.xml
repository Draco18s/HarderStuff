                    <Setting name='BranchLength' avg=':= _default_'/>
                    <Setting name='BranchHeightLimit' avg='12'/>
                    <Setting name='BranchFrequency' avg=':= 0.85 * _default_'/>
                    <Setting name='SegmentRadius'
