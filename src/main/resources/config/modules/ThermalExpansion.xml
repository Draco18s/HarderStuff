                </Veins>   
            </IfCondition>     
            
            <IfCondition condition=':= if(age, age.teLeadClouds > 0, teLeadDist = "strategicClouds")'>
                <Cloud name='TELeadCloud' block='ThermalFoundation:Ore:3' inherits='PresetStrategicCloud'>
